<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.BaseLogoutActivity" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" >

        <TextView
            android:id="@+id/stat_grid_timestamp"
            style="@style/column_left"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#D00000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/stat_grid_location"
            style="@style/column_left"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/location_type_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#d00000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/stat_grid_result"
            style="@style/column_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#D00000"
            android:textSize="12sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#c0c0c0" >

        <TextView
            android:id="@+id/TextView01"
            style="@style/column_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="1sp" />

    </TableRow>

</TableLayout>